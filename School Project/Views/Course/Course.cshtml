@model IEnumerable<School_Project.Models.CourseViewModel>

@{
    ViewBag.Title = "Course";
}

<h2>Course</h2>

<p>
    @Html.ActionLink("Add Course", "Addcourse")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.C_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_NAme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credit_Hour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.C_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.C_NAme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credit_Hour)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm ml-1" })
        </td>
    </tr>
}

</table>
